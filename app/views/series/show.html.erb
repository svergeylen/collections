
<h1>
	<%= @series.name %>

	<div class="btn-group">
		<button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>  <span class="caret"></span>
		</button>
		<ul class="dropdown-menu">
			<li><%= link_to 'Modifier la série', edit_series_path(@series) %></li>
			<li><%= link_to 'Supprimer la série', series_path(@series), method: :delete, data: { confirm: 'Supprimer la série entière et tous les éléments qu\'elle contient ?' } %> </li>
		</ul>
	</div>
</h1>

<table class="table table-striped">
  <tr>
    <th></th>
    <th>Titre</th>
		<th>Auteurs</th>
		<th>Note</th>
		<th>Remarque</th>
  </tr>

	<% @items.each do |item| %>
		<tr>
		  <td><%= item.numero %></td>
			<td><%= link_to item.name, item_path(item) %></td>
		  <td><%= raw item.authors.map { |a| link_to(a.name, authors_path(a)) }.join(", ") %></td>
			<td><%= link_to_modal(item, current_user.id) %>
			</td>
			<td><%= truncate( item.like_from(current_user.id).remark, length: 50, separator: ' ') %></td>
		</tr>
	<% end %>

</table> 

<%= render partial: "items/form", locals: {item: @new_item, submit_text: "Créer" } %>

<%= render partial: "items/modal" %>



