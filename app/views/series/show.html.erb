<%# render(template: 'series/show.json.jbuilder') %>
<%# render(template: 'items/index.json.jbuilder') %>
<%# render partial: "items/modal" %>

<div class="rounded-box">
	<div class="series-show">
		<div class="btn-group">
			<button type="button" class="btn btn-default btn-sm">
				<span class="glyphicon glyphicon-th-list"></span>
			</button>
			<button type="button" class="btn btn-default btn-sm">
				<span class="glyphicon glyphicon-th"></span>
			</button>

			<button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>  <span class="caret"></span>
			</button>
			<ul class="dropdown-menu pull-right">
				<li>
					<%= link_to "Modifier la série", edit_series_path(@series) %>
				</li>

				<li>
					<%= link_to "Supprimer la série", @series, method: :delete, data: {confirm: "Supprimer la série entière et tous les éléments qu'elle contient ?" } %>
				</li>
			</ul>
		</div>

		<h1>
			<%= @series.name %>
		</h1>
		
		<%= render partial: "table", locals: { items: @items} %>
		
	</div>
	<div class="separator">
		<%= render partial: "items/form", locals: {item: @new_item, submit_text: "Ajouter" } %>
	</div>
</div>