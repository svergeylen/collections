

<div class="row text-center text-lg-left" id="product-gallery">
	<% @series.items.each do |item| %>
		<div class="col-lg-3 col-md-4 col-xs-6" >
			<div class="item-card">
				<%= link_to item, class: "d-block mb-4 h-100" do %>
					<img class="img-fluid" src="http://placehold.it/400x300" alt="" />
				<% end %>

				<div class="item-caption">
					<!-- <UpVote item={this.props.item} /> -->

					<div class="item-name">
						<%= item.name %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>