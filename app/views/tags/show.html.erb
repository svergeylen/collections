<div class="rounded-box">
	<div class="pull-right">
		<div class="dropdown">
			<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
				<span class="glyphicon glyphicon-cog"></span>
		 	<span class="caret"></span></button>
			<ul class="dropdown-menu dropdown-menu-right">
				<li><%= link_to 'Nouveau dossier', new_tag_path %></li>
			    <li><%= link_to "Modifier \"#{@tag.name}\"", edit_tag_path(@tag)  %></li>
			    <li class="<%= "disabled" if @tag.fixture %>"><%= link_to "Supprimer \"#{@tag.name}\"", tag_path(@tag), method: :delete, data: { confirm: 'Etes-vous certain de supprimer ce dossier et tout ce qu\'il contient ?' } %>
			    </li>
			    <li class="divider"></li>
			    <li><%= link_to "Nouvel item", new_item_path(parent_tag_id: @tag.id) %></li>
			    <li><%= link_to "Nouvel item BD", new_item_path(parent_tag_id: @tag.id, view: :bd) %></li>
		  	</ul>
		</div>				
	</div>


	<h1><%= @tag.name %></h1>
	<%= breadcrumbs_for(session[:a], @children.count) %> 	

	<% if @children.present? %>
		<ul class="children_tags">
			<% @children.each do |tag| %>
				<li><%= get_tag_path(tag)  %></li>
			<% end %>
		</ul>
	<%end %>

	<% if @items.present? %>
		<% if @view.present? %>
			<%= render partial: @view, locals: {items: @items } %>
		<% else %>
			<p>Ce dossier contient <%= @items.count %> items.</p>
		<% end %>
	<% end %>


</div>