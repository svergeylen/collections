
<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-8">
  
    <%= render partial: "new" , locals: { post: Post.new }  %>

    <% @posts.each do |post| %>
      <div class="post rounded-box <%= (current_user.displayed_la_une < post.updated_at) ? 'post-new' : 'post-old' %> ">
        <% cache post do %>
          <%= render partial: "post_content", locals: {post: post} %>
        <% end %>

      </div>
    <% end %>

  </div>
  <div class="col-sm-3">    
  </div>
</div> 




