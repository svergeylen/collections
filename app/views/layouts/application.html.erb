<!DOCTYPE html>
<html>
  <head>
 		<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Site VGL </title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
				  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button>
				  <%= link_to "Collector", welcome_index_path, class: "navbar-brand" %>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				  <ul class="nav navbar-nav">
				    <li><%= link_to_current_category() %></li>
				  </ul>
				  
				  <ul class="nav navbar-nav navbar-right">
				    <li class="dropdown">
				      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
								<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
								<%= current_user.email if user_signed_in? %>
								<span class="caret"></span>
							</a>
				      <ul class="dropdown-menu">
								<% if user_signed_in? %>
				        	<li><%= link_to 'Mon profil', edit_user_registration_path %></li>
				        	<li role="separator" class="divider"></li>
				        	<li><%= link_to 'Déconnexion', destroy_user_session_path, method: :delete %></li>
								<% else %>
									<li><%= link_to 'Connexion', new_user_session_path %>/li>>
									<li><%= link_to 'Créer un compte', new_user_registration_path  %> </li>
								<% end %>				       
				      </ul>
				    </li>
				  </ul>

					<form class="navbar-form navbar-right">
				    <div class="form-group">
				      <input type="text" class="form-control" placeholder="Recherche">
				    </div>
				  </form>

				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>


		<div id="main-container" class="container">
     	<% if notice %>
				<p class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p class="alert alert-danger"><%= alert %></p>
			<% end %>

			<%= yield %>
    </div>




  </body>
</html>
