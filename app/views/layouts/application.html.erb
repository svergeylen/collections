<!DOCTYPE html>
<html>
  <head>
 		<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Collector</title>
    <%= favicon_link_tag 'favicon.png', type: 'image/png' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	
  </head>

  <body>


		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
				  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button>
				  <%# link_to "Vergeylen.eu", root_path, class: "navbar-brand" %>
				</div>

				<div class="collapse navbar-collapse">
				  <ul class="nav navbar-nav">
				  	<li>
				  		<%= link_to "News", root_path, class:"white-link" %>
				  	</li>
			    	<li class="dropdown">
			          <a href="#" class="dropdown-toggle white-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Collector <span class="caret"></span></a>
			          <ul class="dropdown-menu">
			            <% Category.all.order(:name).each do |category| %>
			            	<li><%= link_to category.name, category %></li> 
			            <% end %>
			            <li role="separator" class="divider"></li>
			            <li>
			            	<%= link_to "Catégories", categories_path %>
			            </li>
			          </ul>
			        </li>
				    <!-- <li>
				    	<%= link_to_current_category() %>
			    	</li> -->
				  </ul>
				  
				  <ul class="nav navbar-nav navbar-right">
				    <li class="dropdown">
						<% if user_signed_in? %>

						    <a href="#" class="dropdown-toggle white-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
								<%= image_tag current_user.avatar.url(:tiny), alt: "#{current_user.name}", class: "profile-picture" %>
								<%= current_user.name %>
								<span class="caret"></span>
							</a>
						    <ul class="dropdown-menu">		
								<li><%= link_to 'Mon profil', current_user %></li>
					        	<li><%= link_to 'Modifier mon profil', edit_user_registration_path %></li>
					        	<li role="separator" class="divider"></li>
					        	<li><%= link_to 'Déconnexion', destroy_user_session_path, method: :delete %></li>
							</ul>

						<% else %>

							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
								Connexion
								<span class="caret"></span>
							</a>
						    <ul class="dropdown-menu">		
								<li><%= link_to 'Connexion', new_user_session_path %> </li>
								<li><%= link_to 'Créer un compte', new_user_registration_path  %> </li>
							</ul>

						<% end %>
 					</li>
				  </ul>

					<%= form_tag(search_search_path, method: "get", class: "navbar-form navbar-right") do %>
				    <div class="form-group">
				      <%= text_field_tag(:keyword, "", { placeholder: "Recherche", class: 'form-control' }) %>
							
				    </div>
				  <% end %>

				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		<div id="main-container" class="container">
			<% if notice %>
				<p class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p class="alert alert-danger"><%= alert %></p>
			<% end %>

			<%= yield %>
		</div>

  </body>
</html>
