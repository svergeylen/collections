<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :numero, id: :item_numero, placeholder: "Numéro" %>
  </div>

  <div class="field">
		<%= form.text_field :name, id: :item_name, placeholder:"Titre, Nom" %>
  </div>

  <div class="field">
		<%= form.select("series_id", Series.all.collect {|s| [ s.name, s.id ] }, { prompt: "Série", selected: item.series_id} ) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
