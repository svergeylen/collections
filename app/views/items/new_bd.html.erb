<h1>Nouvelle BD</h1>

<%= form_with(model: @item, local: true, :html => { :multipart => true }, class: "form-horizontal") do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :series, "Série", class:"control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= form.select :series, 
        options_from_collection_for_select(@series, :id, :name, [params[:parent_folder_id]] ), 
        { include_blank: true },
        { multiple: true,  class: 'chosen-select' }
      %>

       <%# form.text_field :series, id: :item_series, class: "form-control", autocomplete: :off %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Titre", class:"control-label col-sm-2" %>
    <div class="col-sm-1">
      <%= form.text_field :number, id: :item_number, value: @item.friendly_number, class: "form-control", placeholder:"n°", autocomplete: :off %>
    </div>
    <div class="col-sm-5">
      <%= form.text_field :name, id: :item_name, class: "form-control", placeholder:"Titre", autocomplete: :off %>
    </div>
  </div>
  
 
  <div class="form-group">
    <%= form.label :auteurs, "Auteurs", class:"control-label col-sm-2" %>
    <div class="col-sm-6">
       <%= form.text_field :auteurs, id: :item_auteurs, class: "form-control", autocomplete: :off %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :editions, "Editions", class:"control-label col-sm-2" %>
    <div class="col-sm-6">
       <%= form.text_field :editions, id: :item_editions, class: "form-control", autocomplete: :off %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :rangement, "Rangement", class:"control-label col-sm-2" %>
    <div class="col-sm-6">
       <%= form.text_field :series, id: :item_rangement, class: "form-control", autocomplete: :off %>
    </div>
  </div>

  <%= render partial: "attachement_form", locals: { form: form, item: @item } %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-1">
      <%= form.submit "Sauver", class:"btn btn-primary" %>
    </div>
  </div>

<% end %>

