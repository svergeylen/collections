<div class="rounded-box">
	<div class="pull-right">
		<div class="btn-group">
			<%= link_to star_folder_path(@folder), remote: true, class:"btn btn-default btn-sm" do %>
			 	<span class="glyphicon <%= @starred ? 'glyphicon-star' : 'glyphicon-star-empty' %>" id="folder-star"></span>
			<% end %>
			<%= link_to folder_path(@folder, view: "list"), class:"btn btn-default btn-sm" do %>
				<span class="glyphicon glyphicon-th-list"></span>
			<% end %>
			<%= link_to folder_path(@folder, view: "gallery"), class:"btn btn-default btn-sm" do %>
				<span class="glyphicon glyphicon-th"></span>
			<% end %>

			<div class="dropdown">
				<button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
					<span class="glyphicon glyphicon-cog"></span>
			 	<span class="caret"></span></button>
				<ul class="dropdown-menu dropdown-menu-right">
					<li><%= link_to 'Nouveau dossier', new_folder_path(parent_folder: @folder.id) %></li>
					<li><%= link_to "Modifier \"#{@folder.name}\"", edit_folder_path(@folder)  %></li>
					<li class="<%= "disabled" if @folder.fixture %>"><%= link_to "Supprimer \"#{@folder.name}\"", folder_path(@folder), method: :delete, data: { confirm: 'Etes-vous certain de supprimer ce dossier et tout ce qu\'il contient ?' } %>
					</li>
					<li class="divider"></li>
					<li><%= link_to "Nouvel item", new_item_path(parent_folder_id: @folder.id) %></li>
					<li><%= link_to "Nouvel item BD", new_item_path(parent_folder_id: @folder.id, view: :bd) %></li>
			  	</ul>
			</div>		
		</div>		
	</div>


	<h1><%= @folder.name %></h1>
	<%= breadcrumbs_for(session[:bc], @children.count) %> 	

	<% if @children.present? %>
		<ul class="children_folders">
			<% @children.each do |folder| %>
				<li><%= link_to folder.name, folder  %></li>
			<% end %>
		</ul>
	<%end %>

	<% if @items.present? %>
		<% if @view.present? %>
			<%= render partial: @view, locals: {items: @items } %>
		<% else %>
			<p>Ce dossier contient <%= @items.count %> items.</p>
		<% end %>
	<% end %>


</div>
