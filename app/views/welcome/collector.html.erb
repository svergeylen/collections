<div class="rounded-box">
	<div class="float-right">
		<%= render partial: "shared/collector_menu" %>
	</div>

	<h1>Collector</h1>

	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4 offset-md-4 collector-search">
				<%= form_tag({controller: 'search', action: 'tag'}, method: "get", id:"search_tags_form") do %>
					<%= text_field_tag("collector-tag-search", nil, placeholder: "Recherche dans les tags", data: { options: Tag.searchable_tags}, class:"form-control" ) %>
				<% end %>
			</div>
		</div>

		<% if @tags.present? %>
			<% @tags.each_with_index do |tag, index| %>
				<% if (index % 3 == 0) %>
					<div class="row">
				<% end %>
					<div class="col-md-4">

						<div class="card card-latest">
						  <div class="card-header bg-major">
						    <%= link_to tag.name, tag_path(tag), class:'text-light' %>
						  </div>
						  <ul class="list-group list-group-flush">
						  	<% tag.items.includes(:adder).order(created_at: :desc).limit(5).each do |item| %>
						    	<li class="list-group-item" title="Ajouté par <%= item.adder.name %>, le <%= long_date(item.created_at) %>">
						    		<div class="float-right" >
						    			<% if (item.created_at > current_user.displayed_collector.beginning_of_day) %>
						    				<span class="text-danger"><%= fas_icon "star" %></span>
						    			<% end %>
						    			<span class="text-secondary">le <%= short_date(item.created_at) %></span>
						    		</div>
						    		<%= link_to truncate(item.name, length: 35), item, title: ('Ajouté par '+item.adder.name+', le '+long_date(item.created_at)) %>
						    	</li>
						    <% end %>
						  </ul>
						</div> <!-- card -->

					</div> <!-- col -->
				<% if (index % 3 == 2) %>
					</div> <!-- row -->
				<% end %>
			<% end %>
		<%end %>
	</div>

</div>
